{
  "name": "morozov/diff-sniffer-pull-request",
  "license": "MIT",
  "description": "GitHub pull request validator for Diff Sniffer",
  "authors": [
    {
      "name": "Sergei Morozov",
      "email": "morozov@tut.by"
    }
  ],
  "require": {
    "morozov/diff-sniffer-core": "^3.1",
    "knplabs/github-api": "^2.6",
    "php" : "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.1",
    "phpstan/phpstan": "^0.8.5"
  },
  "autoload": {
    "psr-4": {
      "DiffSniffer\\PullRequest\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DiffSniffer\\PullRequest\\Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/pull-request"
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "3.1.x-dev"
    }
  }
}
