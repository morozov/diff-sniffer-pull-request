{
  "name": "morozov/diff-sniffer-pull-request",
  "description": "GitHub pull request validator for Diff Sniffer",
  "authors": [
    {
      "name": "Sergei Morozov",
      "email": "morozov@tut.by"
    }
  ],
  "require": {
    "morozov/diff-sniffer-core": "3.0.x-dev",
    "knplabs/github-api": "^2.4",
    "php-http/guzzle6-adapter": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.1"
  },
  "autoload": {
    "files": ["src/diff-sniffer.php"],
    "psr-0": {
      "DiffSniffer": "src/"
    }
  },
  "bin": [
    "bin/authenticate",
    "bin/pull-request"
  ]
}
